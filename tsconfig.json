{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "jsx": "react-native",
        "types": ["jest", "node"],
        "baseUrl": "src",
        "paths": {
            "@/components/*": ["components/*"],
            "@/contexts/*": ["contexts/*"],
            "@/features/*": ["features/*"],
            "@/layout/*": ["layout/*"],
            "@/routes/*": ["routes/*"],
            "@/pages/*": ["pages/*"],
            "@/store/*": ["store/*"],
            "@/lib/*": ["lib/*"],
            "@/helpers/*": ["helpers/*"],
            "@/modules/*": ["modules/*"],
            "@/assets/*": ["assets/*"]
        }
    }
}
